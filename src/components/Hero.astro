---
import heroImg from '../assets/illustration-working.svg';
---

<section class="hero">
  <div class="wrapper">
    <div class="hero-content">
      <h1 class="main-heading">More than just shorter links</h1>
      <p class="main-paragraph">Build your brandâ€™s recognition and get detailed insights on how your links are performing.</p>
      <button class="btn">Get Started</button>
    </div>
  
    <div>
      <img src={heroImg.src} alt="">
    </div>
  </div>
</section>



<style>
.hero {
  padding-inline: 1.5rem;
  margin-block-end: 168px;
}



@media screen and (min-width: 48rem) {
  .hero {
    margin-block-end: 152px;
  }
}

.wrapper {
  display: flex;
  align-items: center;
  flex-direction: column-reverse;
  justify-content: center;
  gap: 37px;
  max-width: 69.375rem;
  margin: 0 auto;
}

@media screen and (min-width: 48rem){
  .wrapper {
    flex-direction: row;
    gap: 100px;
  }
}

.hero-content {
  text-align: center;
}

@media screen and (min-width: 48rem) {
  .hero-content {
    text-align: left;
  }
}

.main-heading {
  font-weight: 700;
  font-size: clamp(2.625rem, 6vw, 5rem);
  line-height:  114%;
  letter-spacing: -1.05px;
  color: var(--clr-very-dark-blue);
}

@media screen and (min-width: 48rem) {
  .main-heading {
    letter-spacing: -2px;
}
}

.main-paragraph {
  font-weight: 500;
  font-size: 18px;
  line-height:  167%;
  letter-spacing: 0.122727px;
  color: var(--clr-grayish-violet);
  margin-top: 15px;
}

@media screen and (min-width: 48rem) {
  .main-paragraph {
    font-size: 22px;
    letter-spacing: 0.15px;
    margin-top: 5px;
}
}

.btn {
  background-color: var(--clr-cyan);
  color: var(--clr-white);
  font-weight: 700;
  font-size: 20px;
  padding: 13px 40px;
  border: none;
  border-radius: 1.75rem;
  cursor: pointer;
  margin-top: 2rem;
  transition: background-color 0.3s;

&:hover{
   background-color: #9ae3e3;
  }
}

@media screen and (min-width: 48rem) {
  .btn {
    margin-top: 2.375rem;
  }
}


</style>